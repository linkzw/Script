<UserControl x:Class="Script.Views.Dialogs.CsharpEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Script.Views.Dialogs"
             xmlns:avalon="https://github.com/Dirkster99/AvalonDock"
             xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
             xmlns:editing="clr-namespace:ICSharpCode.AvalonEdit.Editing;assembly=ICSharpCode.AvalonEdit"
             xmlns:rendering="clr-namespace:ICSharpCode.AvalonEdit.Rendering;assembly=ICSharpCode.AvalonEdit"
             xmlns:editor="clr-namespace:RoslynPad.Editor;assembly=RoslynPad.Editor.Windows"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <editor:RoslynCodeEditor FontFamily="Consolas"
                                 Margin="5"
                                 x:Name="editor"
                                 HorizontalScrollBarVisibility="Disabled"
                                 VerticalScrollBarVisibility="Disabled"
                                 Loaded="OnItemLoaded"
                                 Document="{Binding Document}"
                                 ShowLineNumbers="True" />
    </Grid>
</UserControl>
