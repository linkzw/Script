<Window x:Class="Script.Views.Dialogs.AddItemDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Script.Views.Dialogs"
        mc:Ignorable="d"
        Title="AddItemDialog" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="36"/>
        </Grid.RowDefinitions>
        <TextBox Grid.Row="0" Name="InputText" Margin="20 0" Height="28"/>
        <Button Grid.Row="1" Name="AcceptButton" Width="120" Height="30" Content="确认" Click="AcceptButton_Click"/>
    </Grid>
</Window>
