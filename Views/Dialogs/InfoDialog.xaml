<Window x:Class="Script.Views.Dialogs.InfoDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Script.Views.Dialogs"
        mc:Ignorable="d"
        Title="InfoDialog" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <Grid >
            <TextBlock x:Name="MessageText" TextWrapping="Wrap" Margin="0,0,0,15"/>
        </Grid>
        <Grid Grid.Row="1">
            <StackPanel Orientation="Horizontal">
                <Button Content="确认" Width="80" Margin="0,0,10,0" Click="Confirm_Click"/>
                <Button x:Name="Cacel_Button" Content="取消" Width="80" Click="Cancel_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
